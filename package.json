{
  "name": "studentdesk",
  "version": "0.3.2",
  "description": "Minimal modern student manager desktop app (Electron + React + Vite).",
  "main": "electron/main.js",
  "author": "",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "build:renderer": "vite build",
    "build": "vite build && electron-builder --mac",
    "build:all": "vite build && electron-builder --mac --x64 && electron-builder --mac --arm64",
    "start": "electron .",
    "lint": "echo \"(Optional) Add ESLint and run linting here.\"",
    "release": "npm run build:renderer && GH_TOKEN=$GH_TOKEN electron-builder --mac --publish always"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.0",
    "vite": "^5.3.0",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "fuse.js": "^7.1.0",
    "papaparse": "^5.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.1.2",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.example.studentdesk",
    "productName": "StudentDesk",
    "files": [
      "dist/**",
      "electron/**",
      "package.json",
      "build/icon.icns"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.education",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "backgroundColor": "#0e0e10",
      "contents": [
        {
          "x": 140,
          "y": 170,
          "type": "file"
        },
        {
          "x": 380,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ajie62",
        "repo": "StudentDesk"
      }
    ]
  }
}
