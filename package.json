{
  "name": "studentdesk",
  "version": "0.4.4",
  "description": "Minimal modern student manager desktop app (Electron + React + Vite).",
  "main": "electron/main.js",
  "author": "",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "build:renderer": "vite build",
    "build": "vite build && electron-builder --mac",
    "build:all": "vite build && electron-builder --mac --x64 && electron-builder --mac --arm64",
    "start": "electron .",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:strict": "eslint src --ext .ts,.tsx --rule '@typescript-eslint/no-explicit-any:error'",
    "release:prep": "npm run build:renderer",
    "release:x64": "GH_TOKEN=$GH_TOKEN electron-builder --mac --x64 --publish always",
    "release:arm64": "GH_TOKEN=$GH_TOKEN electron-builder --mac --arm64 --publish always",
    "release:both": "npm run release:prep && npm run release:x64 && npm run release:arm64"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "typescript": "^5.5.0",
    "vite": "^5.3.0",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.543.0",
    "papaparse": "^5.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.1.2",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.example.studentdesk",
    "productName": "StudentDesk",
    "files": [
      "dist/**",
      "electron/**",
      "package.json",
      "src/art/icon.icns"
    ],
    "asarUnpack": [
      "node_modules/electron-store/**"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "src/art/icon.icns",
      "category": "public.app-category.education",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "icon": "src/art/icon.icns",
      "backgroundColor": "#0e0e10",
      "contents": [
        {
          "x": 140,
          "y": 170,
          "type": "file"
        },
        {
          "x": 380,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ajie62",
        "repo": "StudentDesk"
      }
    ]
  }
}
